<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
                
 <bean id="product" class="SpringConstructorDiObject.Product">  
 <property name="productId" value="123"></property>
  <property name="name" value="Mobiles"></property>
   <property name="price" value="25000"></property>
    <property name="seller" ref="seller"></property>
</bean>  
              
 <bean id = "seller" class="SpringConstructorDiObject.Seller">
  <property name="sellername" value="Samsung"></property>
   <property name="address" value="Noida"></property>
 </bean>               
</beans> 